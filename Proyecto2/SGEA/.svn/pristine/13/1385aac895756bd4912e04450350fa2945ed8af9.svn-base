@model SGEA.Models.Curso

@{
    ViewBag.Title = "Editar";
}


<div class="page-title">
    <div class="title_left" style="margin-left:10px;">
        <h1>Editar Curso - @Model.NombreCurso </h1>
    </div>
    <div class="title_right">
    </div>
</div>


<div class="col-md-12 col-sm-12 col-xs-12">
    <div class="x_panel">
        <div class="x_content">
            <br>

            <div id="form_error" class="alert" hidden>
                <span class="closebtn">&times;</span>
                <strong>Error!</strong> Ha habido un error al modificar el campo.
            </div>

            <div id="form_exit" class="alert success" style="text-align:center" hidden>
                <span class="closebtn">&times;</span>
                <strong>Éxito!</strong> El campo se modificó correctamente.
            </div>

            @using (Html.BeginForm("Editar", "Curso", FormMethod.Post, new { @class = "form-horizontal form-label-left", @data_parsley_validate = "" }))
            {
                @Html.AntiForgeryToken()

                <div class="form-group">
                    @Html.LabelFor(x => x._Curso, new { @class = "control-label col-md-3 col-sm-3 col-xs-12" })
                    <div class="col-md-6 col-sm-6 col-xs-12">
                        @Html.TextBoxFor(x => x._Curso, new { @class = "form-control col-md-7 col-xs-12", @required = "required", @type = "number" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(x => x.Seccion, new { @class = "control-label col-md-3 col-sm-3 col-xs-12" })
                    <div class="col-md-6 col-sm-6 col-xs-12">
                        @Html.TextBoxFor(x => x.Seccion, new { @class = "form-control col-md-7 col-xs-12", @required = "required", @type = "text" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(x => x.Turno, new { @class = "control-label col-md-3 col-sm-3 col-xs-12" })
                    <div class="col-md-6 col-sm-6 col-xs-12">
                        @Html.TextBoxFor(x => x.Turno, new { @class = "form-control col-md-7 col-xs-12", @required = "required", @type = "text" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(x => x.NombreCurso, new { @class = "control-label col-md-3 col-sm-3 col-xs-12" })
                    <div class="col-md-6 col-sm-6 col-xs-12">
                        @Html.TextBoxFor(x => x.NombreCurso, new { @class = "form-control col-md-7 col-xs-12", @required = "required", @type = "text" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(x => x.Observacion, new { @class = "control-label col-md-3 col-sm-3 col-xs-12" })
                    <div class="col-md-6 col-sm-6 col-xs-12">
                        @Html.TextBoxFor(x => x.Observacion, new { @class = "form-control col-md-7 col-xs-12", @required = "required", @type = "text" })
                    </div>
                </div>
                <div class="ln_solid"></div>
                <div class="form-group">
                    <div class="col-md-6 col-sm-6 col-xs-12 col-md-offset-3">
                        <a href="@Url.Action("Index","Curso")" class="btn btn-primary" type="button">Cancelar</a>
                        <button type="submit" class="btn btn-success">Confirmar</button>
                    </div>
                </div>

                @*</form>*@
            }
        </div>
    </div>
</div>

@Scripts.Render("~/bundles/jquery")

<script type="text/javascript">
    $(document).ready(function () {

    });
</script>