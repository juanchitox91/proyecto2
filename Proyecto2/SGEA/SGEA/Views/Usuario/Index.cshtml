@{
    ViewBag.Title = "Home Page";
}
@{

    List<SGEA.Models.Usuario> modelo = (List<SGEA.Models.Usuario>)ViewBag.Usuarios;
}

@Scripts.Render("~/bundles/jquery")
@Styles.Render("~/Datatable/css")

@*<script src="../Content/DataTables/DataTables-1.10.18/js/jquery.dataTables.min.js" type="text/javascript"></script>
<style src="../Content/DataTables/DataTables-1.10.18/css/jquery.dataTables.min.css" type="text/css"></style>*@

<div class="page-title">
    <div class="title_left" style="margin-left:10px;">
        <h1>Usuarios</h1>
    </div>
    <div class="title_right">
    </div>
</div>

<div class="col-md-12 col-sm-12 col-xs-12">
    <div class="x_panel">
        @*<div class="x_title">
                <div class="clearfix"></div>
            </div>*@
        <div id="buttonset" style="margin-top:5px;margin-bottom:5px;">
            @*<button class="btn btn-primary"><a class="btn btn-primary"href="@Url.Action("Crear","Usuario")">Crear Nuevo</a></button>*@
            <a class="btn btn-primary" href="@Url.Action("Crear","Usuario")">Crear Nuevo</a>
        </div>
        <div class="x_content">
            @*<p class="text-muted font-13 m-b-30">
                    DataTables has most features enabled by default, so all you need to do to use it with your own tables is to call the construction function: <code>$().DataTable();</code>
                </p>*@
            <div @*id="datatable_wrapper" class="dataTables_wrapper form-inline dt-bootstrap no-footer"*@>
                <div class="row">
                    <div class="col-sm-12">
                        <table id="example" class="table table-striped table-bordered dataTable no-footer" style="width:100%">
                            <thead>
                                <tr>
                                    <th>Nombre</th>
                                    <th>Apellido</th>
                                    <th>Email</th>
                                    <th>Rol</th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                @{
                                    foreach (var u in modelo)
                                    {
                                        <tr>
                                            <td>@u.Nombre</td>
                                            <td>@u.Apellido</td>
                                            <td>@u.Email</td>
                                            <td>@u.NombreRol</td>
                                            <td>
                                                <a href="@Url.Action("VerDetalle","Usuario", new { id = u.ID})"><span class="fa fa-search"></span></a>
                                                <a href="@Url.Action("Editar","Usuario", new { id = u.ID})"><span class="fa fa-pencil"></span></a>
                                                <a href="@Url.Action("Eliminar","Usuario", new { id = u.ID})"><span class="fa fa-trash"></span></a>
                                            </td>
                                        </tr>
                                    };
                                }

                            </tbody>
                            <tfoot>
                                <tr>
                                    <th>Nombre</th>
                                    <th>Apellido</th>
                                    <th>Email</th>
                                    <th>Rol</th>
                                    <th></th>
                                </tr>
                            </tfoot>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>


    <script type="text/javascript">
        $(document).ready(function () {
            $('#example').DataTable();
        });
    </script>
