@{
    ViewBag.Title = "Abonar Arancel";
}
@{

    List<SGEA.Models.Inscripcion> modelo = (List<SGEA.Models.Inscripcion>)ViewBag.Inscripciones;
}

@Scripts.Render("~/bundles/jquery")
@Styles.Render("~/Datatable/css")


<div class="page-title">
    <div class="title_left" style="margin-left:10px;">
        <h1>Abonar Aranceles</h1>
    </div>
    <div class="title_right">
    </div>
</div>

<div class="col-md-12 col-sm-12 col-xs-12">
    <div class="x_panel">

        <div class="x_content">
            <div>
                <div class="row">
                    <div class="col-sm-12">
                        <table id="example" class="table table-striped table-bordered dataTable no-footer" style="width:100%">
                            <thead>
                                <tr>
                                    <th>Nro Dcto</th>
                                    <th>Alumno</th>
                                    <th>Curso</th>
                                    <th>Nombre Arancel</th>
                                    <th>Accion</th>
                                </tr>
                            </thead>
                            <tbody>
                                @{
                                    foreach (var u in modelo)
                                    {
                                        <tr>
                                            <td>@u.Cedula</td>
                                            <td>@u.NombreAlumno</td>
                                            <td>@u.NombreCurso</td>
                                            <td>@u.NombreArancel</td>
                                            <td>
                                                <a href="@Url.Action("AbonarInscripcion","Inscripcion", new { id = u.ID})" class="btn btn-primary"><span  title="Abonar Inscripcion">Abonar Arancel</span></a>
                                            </td>
                                        </tr>
                                    };
                                }
                            </tbody>
                            <tfoot>
                                <tr>
                                    <th>Nro Dcto</th>
                                    <th>Alumno</th>
                                    <th>Curso</th>
                                    <th>Nombre Arancel</th>
                                    <th>Estado</th>
                                </tr>
                            </tfoot>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script type="text/javascript">
    $(document).ready(function () {
        $('#example').DataTable();
    });
</script>
